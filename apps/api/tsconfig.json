{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "CommonJS",
    "target": "ES2020",
    "moduleResolution": "node",
    "plugins": [
      {
        "transform": "typia/lib/transform"
      },
      {
        "transform": "@nestia/core/lib/transform"
      }
    ]
  },
  "include": ["src"],
  "exclude": ["node_modules", "test", "tests"]
}
