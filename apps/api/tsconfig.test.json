{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist-test",
    "sourceMap": true,
    "skipLibCheck": true,
    "composite": false,
    "plugins": [
      {
        "transform": "typia/lib/transform"
      },
      {
        "transform": "@nestia/core/lib/transform"
      }
    ]
  },
  "include": ["src/**/*", "test/**/*", "tests/**/*"],
  "exclude": ["node_modules", "dist", "dist-test"]
}